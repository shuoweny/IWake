<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/friend_background_with_color"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_marginTop="15dp"
        android:clickable="true"
        android:focusable="true"

        android:orientation="horizontal">

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/arrow" />

        <TextView
            android:id="@+id/arrowText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Privacy Settings"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="#463734"
            android:textSize="22sp" />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sensors"
        android:layout_marginTop="25dp"
        android:textSize="18sp"
        android:gravity="start"
        android:textColor="#FF700B"
        android:fontFamily="@font/poppins_semibold"/>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_semibold"
            android:text="Camera"
            android:textColor="#000000"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/camera_checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:thumbTint="#FF9B04"
            android:trackTint="#FF700B" />
    </LinearLayout>







</LinearLayout>
