<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/friend_background_with_color"
    android:gravity="center_horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_marginTop="15dp"
        android:clickable="true"
        android:focusable="true"

        android:orientation="horizontal">

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/arrow" />

        <TextView
            android:id="@+id/arrowText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit profile photo"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="#463734"
            android:textSize="22sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:focusable="true"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose from the following options"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="#000000"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:id="@+id/avatar1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="20dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/avatar" />

        <ImageView
            android:id="@+id/avatar2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="20dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/avatar2" />

        <ImageView
            android:id="@+id/avatar3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="20dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/avatar3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">
        <ImageView
            android:id="@+id/avatar4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="20dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/avatar4" />

        <ImageView
            android:id="@+id/avatar5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="20dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/avatar5" />

        <ImageView
            android:id="@+id/avatar6"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="20dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/avatar6" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:id="@+id/avatar7"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/avatar7"
            android:layout_margin="20dp"
            android:clickable="true"
            android:focusable="true" />
        <ImageView
            android:id="@+id/avatar8"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/avatar8"
            android:layout_margin="20dp"
            android:clickable="true"
            android:focusable="true" />
        <ImageView
            android:id="@+id/avatar9"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/avatar9"
            android:layout_margin="20dp"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:id="@+id/avatar10"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/avatar10"
            android:layout_margin="20dp"
            android:clickable="true"
            android:focusable="true" />
        <ImageView
            android:id="@+id/avatar11"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/avatar11"
            android:layout_margin="20dp"
            android:clickable="true"
            android:focusable="true" />
        <ImageView
            android:id="@+id/avatar12"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/avatar12"
            android:layout_margin="20dp"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
    <Button
        android:id="@+id/confirm"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:backgroundTint="#FF700B"
        android:fontFamily="@font/poppins_semibold"
        android:text="Confirm and Update " />
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        android:layout_marginTop="8dp"

            android:gravity="center">

        <Button
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:backgroundTint="#76A94F"
            android:fontFamily="@font/poppins_semibold"
            android:text="Cancel and Back" />
    </LinearLayout>


</LinearLayout>
